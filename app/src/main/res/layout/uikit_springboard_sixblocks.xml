<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="?attr/uikit_gradWindowBackground"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/springboard_title_text_margin_bottom"
            android:layout_marginTop="@dimen/springboard_title_text_margin_top"
            android:includeFontPadding="true"
            android:text="@string/uikit_about_screen_apptitle"
            android:textColor="@color/uikit_white"
            android:textSize="33dp" />

        <com.philips.cdp.uikit.UikitSpringBoardLayout
            android:id="@+id/row_layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/springboard_gridspacing"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            app:uikit_opacityStyle="darker_with_opacity">

            <RelativeLayout
                android:id="@+id/item1"
                android:layout_width="@dimen/springboard_gridsize"
                android:layout_height="@dimen/springboard_gridsize"
                android:layout_marginRight="@dimen/springboard_gridspacing"
                android:clickable="true"

                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/image_margin_top" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/springboard_text_margin_bottom"
                    android:layout_marginTop="@dimen/springboard_text_margin_top"
                    android:includeFontPadding="true"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item2"
                android:layout_width="@dimen/springboard_gridsize"
                android:layout_height="@dimen/springboard_gridsize"
                android:clickable="true"

                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/image_margin_top"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/springboard_text_margin_bottom"
                    android:layout_marginTop="@dimen/springboard_text_margin_top"
                    android:includeFontPadding="true"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="16sp" />

            </RelativeLayout>
        </com.philips.cdp.uikit.UikitSpringBoardLayout>


        <com.philips.cdp.uikit.UikitSpringBoardLayout
            android:id="@+id/row_layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/springboard_gridspacing"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            app:uikit_opacityStyle="darker_with_opacity">

            <RelativeLayout
                android:id="@+id/item3"
                android:layout_width="@dimen/springboard_gridsize"
                android:layout_height="@dimen/springboard_gridsize"
                android:layout_marginRight="@dimen/springboard_gridspacing"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/image_margin_top"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/springboard_text_margin_bottom"
                    android:layout_marginTop="@dimen/springboard_text_margin_top"
                    android:includeFontPadding="true"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item4"
                android:layout_width="@dimen/springboard_gridsize"
                android:layout_height="@dimen/springboard_gridsize"
                android:clickable="true"

                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/image_margin_top"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/springboard_text_margin_bottom"
                    android:layout_marginTop="@dimen/springboard_text_margin_top"
                    android:includeFontPadding="true"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="16sp" />

            </RelativeLayout>
        </com.philips.cdp.uikit.UikitSpringBoardLayout>


        <com.philips.cdp.uikit.UikitSpringBoardLayout
            android:id="@+id/row_layout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"

            android:orientation="horizontal"
            app:uikit_opacityStyle="darker_with_opacity">

            <RelativeLayout
                android:id="@+id/item5"
                android:layout_width="@dimen/springboard_gridsize"
                android:layout_height="@dimen/springboard_gridsize"
                android:layout_marginRight="@dimen/springboard_gridspacing"
                android:clickable="true"

                >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/image_margin_top"
                   />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/springboard_text_margin_bottom"
                    android:layout_marginTop="@dimen/springboard_text_margin_top"
                    android:includeFontPadding="true"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item6"
                android:layout_width="@dimen/springboard_gridsize"
                android:layout_height="@dimen/springboard_gridsize"
                android:clickable="true"

                >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/image_margin_top"
                   />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/springboard_text_margin_bottom"
                    android:layout_marginTop="@dimen/springboard_text_margin_top"
                    android:includeFontPadding="true"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="16sp" />

            </RelativeLayout>
        </com.philips.cdp.uikit.UikitSpringBoardLayout>

    </LinearLayout>

</LinearLayout><!--160 , 180-->